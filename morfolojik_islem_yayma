import cv2
import numpy as np
img = cv2.imread("dosya_adi.jpg", 0)                   //foto dosyasının adını yazıp .'dan sonra türünü yazacaksın (.jpg  .png)
#Numpy ile kernel matris tanımı
kernel = np.ones((5,5),np.uint8)

#Aşındırma işlemi
yayma = cv2.erode(img,kernel,iterations = -1)
cv2.imshow("Pencere", yayma)
cv2.imwrite("yeni_dosya.png", yayma)                   //eşikleme işlemi uyguladığın fotoyu kaydet
cv2.waitKey(0)
